<div class="user-show">
  <div class="user-show-top">

		<% if current_user == @user %>
		<% else %>
		<h2><%= @user.name.capitalize %>'s Profile Page!</h2>
		<% end %>
  </div>
  <div class="users-show-mid">
    Your game subscriptions
  </div>
  <div class="user-show-btm">
    <%= render partial: "partials/game"%>
  </div>
</div>

<div class="friends-list">

	<%if current_user.friends.include?(@user) %>
	<!-- Unfriend Button -->
		<%= button_to "Unfriend", { action: "destroy", id: @user.id }, method: :delete, data: { confirm: "Are you sure?" } %>
		<% else %>
		<!-- Add Friend Button -->
		<% if current_user.id == @user.id %>
		<% else %>
		<%= button_to "Add Friend", action: "friendship" %>
		<% end %>
	<% end %>

	<h2><%= @user.name.capitalize %>'s friends</h2>
		<div class="friends-names">
      <div class="list-direction">
        <ul>
          <%= render partial: 'partials/friend', collection: @friends %>
        </ul>  
      </div>

      <div class="players-list">
        <%= image_tag "/images/woman.png", class: "woman" %>
        <%= image_tag "/images/word-bub.png", class: "word-bub animated bounceInDown" %>
      </div>
		</div>
</div>
